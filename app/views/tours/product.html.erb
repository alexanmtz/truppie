              <input name="name" type="hidden" value="<%= @product_json["product"]["name"] %>" />
              <div id="reservation-items"></div>
              <%= submit_tag t('tours_view_show_link_three'), class: 'btn btn-primary btn-lg btn-block' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
