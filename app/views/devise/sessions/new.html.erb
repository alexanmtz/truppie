<%= render 'layouts/flash' %>
<div class="login-background">
	<div class="container">
	    <div class="row">
	        <div class="col-sm-6 col-md-4 col-md-offset-4">
	            <div class="account-wall" style="margin: 40px 0; overflow: hidden;">
	            	<%= link_to root_path do %>
	                	<%= image_tag("logos-05.svg", :alt => "Truppie", :class => 'img-fluid center-block') %>
	                <% end %>
	                <div class="text-xs-center">
	                <%- if devise_mapping.omniauthable? %>
                    <%- resource_class.omniauth_providers.each do |provider| %>
                      <%= link_to omniauth_authorize_path(resource_name, provider), class: 'btn btn-social btn-facebook' do %>
                        <span class="fa fa-<%= provider %>"></span> <%= "Entrar com o #{OmniAuth::Utils.camelize(provider)}" %>
                      <% end %>
                    <% end -%>
                  <% end -%>
	                </div>
	                <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
	                	<%= f.email_field :email, autofocus: true, required: true, placeholder: 'Email', class: 'form-control' %>
	                	<%= f.password_field :password, autocomplete: "off", placeholder: 'Senha', class: 'form-control' %>
	                	<%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
	                	 <% if devise_mapping.rememberable? -%>
						      <%= f.check_box :remember_me %>
						      <%= f.label "Lembrar de mim?" %>
						  <% end -%>
	                	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
						  <%= link_to "Criar conta", new_registration_path(resource_name), id: 'create-account', class: 'pull-right' %><br />
                        <div style="clear: both"><%= render "devise/shared/links" %></div>
						<% end -%>
	                <% end %>
	            </div>

	        </div>
	    </div>
	</div>
  <div id="fullscreen_bg" class="fullscreen_bg"></div>
</div>

